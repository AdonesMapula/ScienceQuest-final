<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".User.Profile.ProfileFragment"
        android:background="@android:color/white">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="162dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_bg"
            android:orientation="vertical"
            android:paddingTop="40dp"
            android:paddingBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline">


            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserratalternates_bold"
                android:text="User Profile"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserratalternates_regular"
                android:gravity="center"
                android:text="yankinyurii123@gmail.com"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="30dp"
                android:alpha=".5"
                android:background="#FFFFFF" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserratalternates_bold"
                android:text="Overview"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginBottom="4dp"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />


                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/profile_card_bg"
                    android:padding="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/ic1"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginRight="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/fire_ic" />

                    <TextView
                        android:id="@+id/tv_streak_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@+id/ic1"
                        android:fontFamily="@font/montserratalternates_bold"
                        android:text="14"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ic1"
                        android:layout_marginLeft="40dp"
                        android:alpha="0.5"
                        android:layout_marginTop="-4dp"
                        android:fontFamily="@font/montserratalternates_medium"
                        android:text="Streak"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/profile_card_bg"
                    android:padding="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guideline2"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/ic2"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/lightning_ic" />

                    <TextView
                        android:id="@+id/tv_points_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@+id/ic2"
                        android:fontFamily="@font/montserratalternates_bold"
                        android:text="114"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ic2"
                        android:layout_marginLeft="37dp"
                        android:alpha="0.5"
                        android:layout_marginTop="-4dp"
                        android:fontFamily="@font/montserratalternates_medium"
                        android:text="Total Points"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </RelativeLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/profile_card_bg"
                    android:padding="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/ic3"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/badge_ic" />

                    <TextView
                        android:id="@+id/tv_badges_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@+id/ic3"
                        android:fontFamily="@font/montserratalternates_bold"
                        android:text="10"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ic3"
                        android:layout_marginLeft="42dp"
                        android:alpha="0.5"
                        android:layout_marginTop="-6dp"
                        android:fontFamily="@font/montserratalternates_medium"
                        android:text="Badges"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relativeLayout3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/profile_card_bg"
                    android:padding="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guideline3"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/ic4"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ranking_ic2" />

                    <TextView
                        android:id="@+id/tv_current_rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@+id/ic4"
                        android:fontFamily="@font/montserratalternates_bold"
                        android:text="1st"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ic4"
                        android:layout_marginLeft="42dp"
                        android:alpha="0.5"
                        android:layout_marginTop="-6dp"
                        android:fontFamily="@font/montserratalternates_medium"
                        android:text="Current Rank"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratalternates_bold"
                    android:text="Achievements"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/viewAllBadgesBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:padding="0dp"
                    android:textColor="@color/white"
                    android:text="View All"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    android:layout_gravity="end"
                    android:fontFamily="@font/montserratalternates_semibold"
                    android:backgroundTint="@android:color/transparent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/profile_card_bg"
                android:padding="12dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/badgeContainer1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ribbon_img" />

                <ImageView
                    android:id="@+id/badgeContainer2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ribbon_img" />
                <ImageView
                    android:id="@+id/badgeContainer3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ribbon_img" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/editProfileBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_card_bg"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:fontFamily="@font/montserratalternates_semibold"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:alpha=".9"/>

                <ImageView

                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/white_arrow_ic"


                    />
            </LinearLayout>


            <Button
                android:id="@+id/signOutBtn"
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:text="Sign out"
                android:fontFamily="@font/montserratalternates_semibold"
                android:textSize="18sp"
                android:textColor="#E6FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/userName"
                app:strokeColor="#80FFFFFF"
                app:strokeWidth="2dp" />

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-55dp"
            android:background="@color/white"
            app:cardCornerRadius="100dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/profile_container2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                android:background="@drawable/user_profile_bg"
                android:clipToOutline="true"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/userProfile2"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/sample_chara" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>