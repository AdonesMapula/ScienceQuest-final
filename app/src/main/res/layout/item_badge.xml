<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="103dp"
    android:layout_height="142dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    app:cardCornerRadius="20dp"
    android:backgroundTint="@color/white"
    android:layout_marginRight="8dp">

    <LinearLayout
        android:id="@+id/badgeContainer"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bio_item_bg"
        android:padding="16dp">
        <TextView
            android:id="@+id/badgeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Badge Name"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:textSize="12sp"
            android:fontFamily="@font/montserratalternates_bold"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/badgeIcon"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ribbon_img"
        android:contentDescription="Badge Icon" />


</FrameLayout>
