<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/colorPrimary">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Course Image (Placed Behind) -->
        <ImageView
            android:id="@+id/courseImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/big_microscope"
            android:scaleType="fitCenter"/>

        <!-- Text Content (Overlayed on Image) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:paddingEnd="130dp"> <!-- Push text away from the image -->

            <TextView
                android:id="@+id/courseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biology"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_bold"
                android:shadowColor="@color/colorPrimary"
                android:shadowRadius="2"
                android:shadowDx="1"
                android:shadowDy="1"/>

            <TextView
                android:id="@+id/courseDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exploring Life and Living Systems"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:alpha="0.9"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginTop="4dp"
                android:shadowColor="@color/colorPrimary"
                android:shadowRadius="2"
                android:shadowDx="1"
                android:shadowDy="1"/>

            <TextView
                android:id="@+id/courseProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="87%"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:shadowColor="@color/colorPrimary"
                android:shadowRadius="2"
                android:shadowDx="1"
                android:shadowDy="1"/>

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Continue"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/yellowMain"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="16dp"
                android:fontFamily="@font/montserrat_bold"/>

        </LinearLayout>

    </FrameLayout>
</androidx.cardview.widget.CardView>
