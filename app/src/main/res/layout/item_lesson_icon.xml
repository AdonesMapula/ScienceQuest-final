<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/borderLayout"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#D7F5FF"
    >

    <!-- Vertical side line -->
    <View
        android:id="@+id/lineActive"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="#44D1FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <!-- Top line -->
    <View
        android:id="@+id/lineTop"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/disabledGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha=".5"
        android:visibility="gone"/>

        <!-- Lesson Icon -->
    <ImageView
        android:id="@+id/lessonIcon"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginVertical="8dp"
        android:alpha=".5"
        android:layout_marginLeft="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/disabledGray" />

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:textSize="10sp"
        android:text="Sample"
        android:fontFamily="@font/montserratalternates_medium"
        android:textColor="#333333"
        android:alpha=".7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lessonIcon"
        app:layout_constraintTop_toTopOf="parent" />


        <!-- Vertical side line -->
    <View
        android:id="@+id/lineSide"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/disabledGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha=".5"
        android:visibility="gone"/>

        <!-- Bottom line -->
    <View
        android:id="@+id/lineBot"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:alpha=".05"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
