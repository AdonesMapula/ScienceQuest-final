<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp"
        android:paddingBottom="16dp">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="60dp"
            android:background="@android:color/transparent"
            android:contentDescription="TODO"
            android:src="@drawable/backbtn_foreground" />

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/montserratalternates_semibold"
            android:text="Quizzes"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginRight="50dp"
            android:layout_gravity="bottom"
            android:textColor="@color/black33"
            android:textSize="16sp" />


    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/input_border"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:padding="4dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/sq_search_ic"/>

                <EditText
                    android:layout_marginStart="12dp"
                    android:id="@+id/searchBar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratalternates_semibold"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:hint="Search"
                    android:background="@null"
                    android:textColorHint="@color/grayFont"
                    android:textColor="@color/black90"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/filterIcon"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    android:src="@drawable/baseline_filter_alt_24"
                    android:contentDescription="Filter" />
            </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                
                <FrameLayout
                    android:layout_width="157dp"
                    android:layout_height="236dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:elevation="8dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/biology_ic"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="157dp"
                        android:layout_height="215dp"
                        android:orientation="vertical"
                        android:layout_gravity="bottom"
                        android:paddingTop="90dp"
                        android:paddingHorizontal="12dp"
                        android:background="@drawable/bio_item_bg">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratalternates_semibold"
                            android:text="Biology"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView6"
                            android:fontFamily="@font/montserratalternates_medium"
                            android:text="Learn about cells, genetics, ecosystems, and the diversity of life on our planet!"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView6" />

                        <Button
                            android:id="@+id/startBiology"
                            android:layout_width="60dp"
                            android:layout_height="35dp"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/montserratalternates_semibold"
                            android:padding="0dp"
                            android:text="Start"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/blackFont"
                            android:textSize="10sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </FrameLayout>
                
                <FrameLayout
                    android:layout_width="157dp"
                    android:layout_height="236dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:elevation="8dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/chemistry_ic"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="157dp"
                        android:layout_height="215dp"
                        android:orientation="vertical"
                        android:layout_gravity="bottom"
                        android:paddingTop="90dp"
                        android:paddingHorizontal="12dp"
                        android:background="@drawable/chem_item_bg">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratalternates_semibold"
                            android:text="Chemistry"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView4"
                            android:fontFamily="@font/montserratalternates_medium"
                            android:text="Test your knowledge of atoms, molecules, chemical reactions, and the periodic table!"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView4" />

                        <Button
                            android:id="@+id/startChemistry"
                            android:layout_width="60dp"
                            android:layout_height="35dp"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/montserratalternates_semibold"
                            android:padding="0dp"
                            android:text="Start"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/blackFont"
                            android:textSize="10sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="157dp"
                    android:layout_height="236dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:elevation="8dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/earth_ic"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="157dp"
                        android:layout_height="215dp"
                        android:orientation="vertical"
                        android:layout_gravity="bottom"
                        android:paddingTop="90dp"
                        android:paddingHorizontal="12dp"
                        android:background="@drawable/earth_item_bg">

                        <TextView

                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/montserratalternates_semibold"
                            android:text="Earth &amp; Space"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratalternates_medium"
                            android:text="Test your knowledge of atoms, molecules, chemical reactions, and the periodic table!"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView7" />


                        <Button
                            android:id="@+id/startEarth"
                            android:layout_width="60dp"
                            android:layout_height="35dp"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/montserratalternates_semibold"
                            android:padding="0dp"
                            android:text="Start"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/blackFont"
                            android:textSize="10sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="157dp"
                    android:layout_height="236dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:elevation="8dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/math_ic"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="157dp"
                        android:layout_height="215dp"
                        android:orientation="vertical"
                        android:layout_gravity="bottom"
                        android:paddingTop="90dp"
                        android:paddingHorizontal="12dp"
                        android:background="@drawable/math_item_bg">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/montserratalternates_semibold"
                            android:text="Math &amp; Statistics"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView4"
                            android:fontFamily="@font/montserratalternates_medium"
                            android:text="Challenge yourself with equations, probability, geometry, and real-world data analysis!"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView8" />

                        <Button
                            android:id="@+id/startMath"
                            android:layout_width="60dp"
                            android:layout_height="35dp"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/montserratalternates_semibold"
                            android:padding="0dp"
                            android:text="Start"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/blackFont"
                            android:textSize="10sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </FrameLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="157dp"
                    android:layout_height="236dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:elevation="8dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/physics_ic"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="157dp"
                        android:layout_height="215dp"
                        android:orientation="vertical"
                        android:layout_gravity="bottom"
                        android:paddingTop="90dp"
                        android:paddingHorizontal="12dp"
                        android:background="@drawable/phys_item_bg">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratalternates_semibold"
                            android:text="Physics"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratalternates_medium"
                            android:text="Explore the laws of motion, energy, electricity, and the mysteries of the universe!"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView9" />

                        <Button
                            android:id="@+id/startPhysics"
                            android:layout_width="60dp"
                            android:layout_height="35dp"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/montserratalternates_semibold"
                            android:padding="0dp"
                            android:text="Start"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/blackFont"
                            android:textSize="10sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="157dp"
                    android:layout_height="236dp"
                    android:orientation="vertical"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

</LinearLayout>
