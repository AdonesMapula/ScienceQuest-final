<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ScienceQuest" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Light theme -->
    <style name="Theme.ScienceQuest" parent="Base.Theme.ScienceQuest">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Dark theme -->
    <style name="Theme.ScienceQuest.Dark" parent="Base.Theme.ScienceQuest">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.ScienceQuest.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.ScienceQuest.AppWidgetContainer" parent="Theme.ScienceQuest.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>
