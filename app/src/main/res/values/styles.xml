<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextInputLayoutColors" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">30dp</item>
        <item name="boxCornerRadiusTopEnd">30dp</item>
        <item name="boxCornerRadiusBottomEnd">30dp</item>
        <item name="boxCornerRadiusBottomStart">30dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Set hint and text color -->
        <item name="android:textColorHint">@color/grayFont</item> <!-- Hint text color -->
        <item name="android:textColor">@color/colorPrimary</item> <!-- Text color -->
        <item name="cornerRadius">10dp</item>
        <item name="queryHint">Search work orders</item>
        <item name="iconifiedByDefault">false</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="boxBackgroundColor">#ECECEC</item>
        <item name="queryBackground">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="CustomBottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/CustomActiveTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/CustomInactiveTextAppearance</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="CustomActiveTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item> <!-- Adjust label text size -->
        <item name="android:paddingTop">-4dp</item> <!-- Reduce space between icon and text -->
    </style>

    <style name="CustomInactiveTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">10sp</item> <!-- Adjust label text size -->
        <item name="android:paddingTop">-4dp</item> <!-- Reduce space between icon and text -->
    </style>

    <style name="Widget.ScienceQuest.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.ScienceQuest.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


    <!-- Spinner style -->
    <style name="CustomSpinnerStyle">

        <item name="android:background">@drawable/category_spinner_bg</item>
        <item name="android:fontFamily">@font/montserratalternates_bold</item> <!-- Use a custom font -->
        <item name="android:textColor">#FFFFFF</item> <!-- White text color, change to your preference -->
        <item name="android:textSize">14sp</item> <!-- Adjust text size -->
    </style>

    <!-- Spinner dropdown item style -->
    <style name="CustomSpinnerItemStyle">
        <item name="android:fontFamily">@font/montserratalternates_bold</item> <!-- Use a custom font -->
        <item name="android:paddingVertical">8dp</item> <!-- Adjust padding for dropdown items -->
        <item name="android:textColor">#FFFFFF</item> <!-- White text color, change to your preference -->
        <item name="android:textSize">14sp</item> <!-- Adjust text size -->
    </style>

    <style name="WidgetTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_extrabold</item>
    </style>

    <style name="WidgetTitleStyle">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserratalternates_medium</item>
        <item name="android:alpha">0.9</item>
    </style>


</resources>